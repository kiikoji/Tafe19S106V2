<Page
    x:Class="StartFinance.Views.AppointmentDeletePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StartFinance.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='1' Icon="Delete" Name="btnDelete" Label="Delete Appt"                        />
            <AppBarButton x:ConnectionId='2' Icon="Cancel" Name="btnCancel" Label="Cancel delete"                        />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:ConnectionId='3' x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- TitlePanel contains the name of the application and page title-->
        <StackPanel x:ConnectionId='4' x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:ConnectionId='8' x:Name="PageTitle" Text="Delete Appointment" Margin="9,-7,0,0" Style="{StaticResource BodyTextBlockStyle}" Height="39"/>
        </StackPanel>
        
        <!-- ContentPanel - place additional content here-->
        <Grid x:ConnectionId='5' x:Name="ContentPanel" Grid.Row="1" HorizontalAlignment="Left">
            <StackPanel Margin="9">
                <StackPanel HorizontalAlignment="Left" Width="328" Orientation="Horizontal" Margin="4,4,0,4"/>
                <StackPanel HorizontalAlignment="Left" Width="328" Orientation="Horizontal" Margin="4,4,0,4">
                    <TextBlock x:ConnectionId='6' Width="130" Name="tbAppointmentId" Text="Appointment ID" Height="50"/>
                    <TextBox x:ConnectionId='7' Name="txtAppointmentId" Text="" Width="187"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

